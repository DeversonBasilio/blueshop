{% extends 'base.html.twig' %}

{% block title %}Blue Shop{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">

    {% include('base/nav.html.twig') %}

    <div class="row">
        <div class="col-lg-3">
             {% for categorium in categorias %}
                {{ categorium.nome }}
             {% endfor %}
        </div>
        
        <div class="col-lg-9">
            {% for produto in produtos %}
                {{ produto.nome }}
                {{ produto.preco }}
                {% if produto.foto is defined %}
                    <img src="{{ asset('upload/produto/'~produto.foto.filename) }}" alt="">
                {%endif%}                
            {% endfor %}
        </div>
    </div>

</div>
{% endblock %}
