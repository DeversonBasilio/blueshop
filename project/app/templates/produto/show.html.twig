{% extends 'base.html.twig' %}

{% block title %}Produto{% endblock %}

{% block body %}

<div class="container">

    <div class="row">
        <img src="{{ asset('banner/BlueShop.png') }}" alt="" >
    </div>

    <h1>Produto</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Imagem</th>
                <td>
                    {% if produto.foto is defined %}
                        <img src="{{ asset('upload/produto/'~produto.foto.filename) }}" alt="" style="height: 337px; object-fit: cover;">
                    {%endif%}
                </td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ produto.id }}</td>
            </tr>
            <tr>
                <th>Nome</th>
                <td>{{ produto.nome }}</td>
            </tr>
            <tr>
                <th>Descricao</th>
                <td>{{ produto.descricao }}</td>
            </tr>
            <tr>
                <th>Preco</th>
                <td>{{ produto.preco }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_produto_index') }}">back to list</a>

    <a href="{{ path('app_produto_edit', {'id': produto.id}) }}" class="btn btn-warning">edit</a>

    {{ include('produto/_delete_form.html.twig') }}

</div>
{% endblock %}
